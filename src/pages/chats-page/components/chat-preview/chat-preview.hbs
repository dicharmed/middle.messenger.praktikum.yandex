{{avatar}}
  <div class="chat-content">
    <div class="chat-content-top">
      <h2 class="chat-content__sender">{{message.sender.firstName}}{{#if message.sender.lastName}}&nbsp{{message.sender.lastName}}{{/if}}</h2>
      <h3 class="chat-content__time">{{message.time}}</h3>
    </div>

    <div class="chat-content-bottom">
      {{#compare message.type "===" 'incoming'}}<h3 class="chat-content__last-sender">You:</h3>{{/compare}}
      <h3 class="chat-content__message">{{message.text}}</h3>
    </div>
    {{#if amount}}
      <div class="chat-content__amount">{{amount}}</div>
    {{/if}}
</div>

